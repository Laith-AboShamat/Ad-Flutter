rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId);
    }
    
    // Chalets collection
    match /chalets/{chaletId} {
      // Anyone (including guests) can read chalets to view videos
      allow read: if true;
      
      // Allow creating chalet document during registration
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.ownerId;
      
      // Allow updates
      allow update: if isAuthenticated() && (
        // Owner can update their chalet completely
        isOwner(resource.data.ownerId) ||
        // Any authenticated user can update ONLY availability / updatedAvailabilityAt (for bookings)
        // and likes / commentsCount (for social interactions)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(
          ['availability', 'updatedAvailabilityAt', 'likes', 'commentsCount']
        ))
      );
      
      // Only owners can delete their chalets
      allow delete: if isAuthenticated() && isOwner(resource.data.ownerId);
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
      }
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings or owners can read bookings for their chalets
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        request.auth.uid == resource.data.ownerId
      );
      
      // Authenticated users can create bookings - ensure userId matches authenticated user
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update their own bookings for check-in, check-out, and cancellation
      // Allow updating: status, checkInDate, checkOutDate, cancelledAt
      allow update: if isAuthenticated() && 
        request.auth.uid == resource.data.userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(
          ['status', 'checkInDate', 'checkOutDate', 'cancelledAt']
        );
      
      // Disable delete for now
      allow delete: if false;
    }

    // Chalet Expenses collection
    match /chalet_expenses/{expenseId} {
      // Owners can read, update, or delete their own expenses
      allow read, update, delete: if isAuthenticated() && request.auth.uid == resource.data.ownerId;
      // Owners can create expenses for themselves
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.ownerId;
    }
  }
}
